<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="25" alignment="TOP_LEFT">
    <Text text="Dashboard" styleClass="page-title"/>
    
    <!-- Cards de Estatísticas -->
    <GridPane hgap="20" vgap="20">
        <!-- Card 1: Total de Livros -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="280">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #e3f2fd; -fx-background-radius: 12px; -fx-pref-width: 60px; -fx-pref-height: 60px;">
                    <FontIcon iconLiteral="mdi2b-book-multiple" iconSize="32" iconColor="#1d72b8"/>
                </StackPane>
                <VBox spacing="5">
                    <Text text="0" styleClass="stat-value"/>
                    <Text text="Total de Livros" styleClass="stat-label"/>
                </VBox>
            </HBox>
        </VBox>
        
        <!-- Card 2: Empréstimos Ativos -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="280">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #fff3e0; -fx-background-radius: 12px; -fx-pref-width: 60px; -fx-pref-height: 60px;">
                    <FontIcon iconLiteral="mdi2s-swap-horizontal-bold" iconSize="32" iconColor="#ff9800"/>
                </StackPane>
                <VBox spacing="5">
                    <Text text="0" styleClass="stat-value"/>
                    <Text text="Empréstimos Ativos" styleClass="stat-label"/>
                </VBox>
            </HBox>
        </VBox>
        
        <!-- Card 3: Multas Pendentes -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="2" GridPane.rowIndex="0" prefWidth="280">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #ffebee; -fx-background-radius: 12px; -fx-pref-width: 60px; -fx-pref-height: 60px;">
                    <FontIcon iconLiteral="mdi2a-alert-circle" iconSize="32" iconColor="#f44336"/>
                </StackPane>
                <VBox spacing="5">
                    <Text text="0" styleClass="stat-value"/>
                    <Text text="Multas Pendentes" styleClass="stat-label"/>
                </VBox>
            </HBox>
        </VBox>
        
        <!-- Card 4: Utentes Registados -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="280">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #e8f5e9; -fx-background-radius: 12px; -fx-pref-width: 60px; -fx-pref-height: 60px;">
                    <FontIcon iconLiteral="mdi2a-account-multiple" iconSize="32" iconColor="#4caf50"/>
                </StackPane>
                <VBox spacing="5">
                    <Text text="0" styleClass="stat-value"/>
                    <Text text="Utentes Registados" styleClass="stat-label"/>
                </VBox>
            </HBox>
        </VBox>
    </GridPane>
    
    <!-- Mensagem de Boas-Vindas -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 25px; -fx-background-radius: 12px;">
        <Text text="Bem-vindo ao SGBU - IMETRO" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #0a2463;"/>
        <Text text="Sistema de Gestão de Biblioteca Universitária" style="-fx-font-size: 14px; -fx-fill: #7f8c8d;"/>
        <Separator prefWidth="400"/>
        <Text text="Utilize o menu lateral para navegar entre as funcionalidades do sistema." style="-fx-font-size: 13px; -fx-fill: #2c3e50;"/>
    </VBox>
</VBox>
