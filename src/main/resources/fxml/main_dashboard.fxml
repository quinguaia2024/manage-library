<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ao.co.imetro.sgbu.controller.MainController"
            styleClass="dashboard-container" prefWidth="1024" prefHeight="768">
    
    <!-- SIDEBAR ESQUERDA - MENU DE NAVEGAÇÃO -->
    <left>
        <VBox styleClass="sidebar" spacing="5" prefWidth="250">
            <!-- Cabeçalho da Sidebar -->
            <VBox styleClass="sidebar-header" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <FontIcon iconLiteral="mdi2b-book-education" iconSize="40" iconColor="white"/>
                </HBox>
                <Text text="SGBU" styleClass="sidebar-title" textAlignment="CENTER"/>
            </VBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>
            
            <!-- Botões do Menu -->
            <VBox spacing="2" VBox.vgrow="ALWAYS">
                <Button fx:id="btnDashboard" text="Dashboard" styleClass="menu-button" 
                        onAction="#handleDashboard">
                    <graphic>
                        <FontIcon iconLiteral="mdi2v-view-dashboard" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnAcervo" text="Gestão de Obras" styleClass="menu-button" 
                        onAction="#handleAcervo">
                    <graphic>
                        <FontIcon iconLiteral="mdi2b-bookshelf" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnUsuarios" text="Gestão de Usuário" styleClass="menu-button" 
                        onAction="#handleUsuarios">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-account-group" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnEmprestimos" text="Empréstimos" styleClass="menu-button" 
                        onAction="#handleEmprestimos">
                    <graphic>
                        <FontIcon iconLiteral="mdi2s-swap-horizontal" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnExemplares" text="Exemplares" styleClass="menu-button" 
                        onAction="#handleExemplares">
                    <graphic>
                        <FontIcon iconLiteral="mdi2b-book-open-variant" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnMultas" text="Multas" styleClass="menu-button" 
                        onAction="#handleMultas">
                    <graphic>
                        <FontIcon iconLiteral="mdi2c-cash" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnReservas" text="Reservas" styleClass="menu-button" 
                        onAction="#handleReservas">
                    <graphic>
                        <FontIcon iconLiteral="mdi2b-bookmark-check" iconSize="20"/>
                    </graphic>
                </Button>

                <Button fx:id="btnConfiguracoes" text="Configurações" styleClass="menu-button"
                        onAction="#handleConfiguracoes">
                    <graphic>
                        <FontIcon iconLiteral="mdi2c-cog" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnEstatisticas" text="Estatísticas" styleClass="menu-button"
                        onAction="#handleEstatisticas">
                    <graphic>
                        <FontIcon iconLiteral="mdi2c-chart-box" iconSize="20"/>
                    </graphic>
                </Button>
                
                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>
                
                <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>
                
                <Button text="Sair" styleClass="menu-button" onAction="#handleLogout">
                    <graphic>
                        <FontIcon iconLiteral="mdi2l-logout" iconSize="20"/>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>
    
    <!-- ÁREA CENTRAL - CONTEÚDO DINÂMICO -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <StackPane fx:id="contentArea" styleClass="content-area">
                <!-- Conteúdo será carregado dinamicamente aqui -->
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>
