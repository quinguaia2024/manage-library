<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="ao.co.imetro.sgbu.controller.RegisterController"
           styleClass="login-container">
    
    <VBox alignment="CENTER" spacing="25" maxWidth="500" maxHeight="700" styleClass="login-card">
        
        <!-- Logo e Cabeçalho -->
        <VBox alignment="CENTER" spacing="10" styleClass="header-section">
            <HBox alignment="CENTER" spacing="10" styleClass="logo-container">
                <FontIcon iconLiteral="mdi2a-account-plus" iconSize="48" styleClass="logo-icon"/>
            </HBox>
            
            <Text text="Criar Conta" styleClass="title-text"/>
            <Text text="Preencha os dados abaixo para se registrar" styleClass="subtitle-text"/>
        </VBox>
        
        <Separator prefWidth="350" styleClass="divider"/>
        
        <!-- Formulário de Registro -->
        <VBox spacing="15" styleClass="form-section">
            
            <VBox spacing="5">
                <Label text="Nome Completo" styleClass="form-label"/>
                <HBox styleClass="input-container">
                    <FontIcon iconLiteral="mdi2a-account-outline" iconSize="20" styleClass="input-icon"/>
                    <TextField fx:id="nameField" promptText="Seu nome" styleClass="form-input"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="E-mail Institucional" styleClass="form-label"/>
                <HBox styleClass="input-container">
                    <FontIcon iconLiteral="mdi2e-email-outline" iconSize="20" styleClass="input-icon"/>
                    <TextField fx:id="emailField" promptText="exemplo@imetro.ao" styleClass="form-input"/>
                </HBox>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Senha" styleClass="form-label"/>
                <HBox styleClass="input-container">
                    <FontIcon iconLiteral="mdi2l-lock-outline" iconSize="20" styleClass="input-icon"/>
                    <PasswordField fx:id="passwordField" promptText="Crie uma senha" styleClass="form-input"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Confirmar Senha" styleClass="form-label"/>
                <HBox styleClass="input-container">
                    <FontIcon iconLiteral="mdi2l-lock-check-outline" iconSize="20" styleClass="input-icon"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Repita a senha" styleClass="form-input"/>
                </HBox>
            </VBox>
            
        </VBox>
        
        <!-- Botões de Ação -->
        <VBox spacing="15" styleClass="buttons-section">
            <Button text="CRIAR CONTA" prefWidth="350" prefHeight="45" styleClass="btn-primary" 
                    onAction="#handleRegister" defaultButton="true">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-check" iconSize="18"/>
                </graphic>
            </Button>
            
            <!-- Link para voltar ao login -->
            <Label text="Já tens uma conta? Voltar ao Login" styleClass="link-label" 
                   onMouseClicked="#handleBackToLogin" alignment="CENTER" maxWidth="Infinity">
                 <graphic>
                     <FontIcon iconLiteral="mdi2a-arrow-left" iconSize="16" styleClass="link-icon"/>
                 </graphic>
            </Label>
        </VBox>
        
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>
    </VBox>
</StackPane>
