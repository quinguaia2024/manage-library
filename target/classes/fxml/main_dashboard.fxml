<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ao.co.imetro.sgbu.controller.MainController"
            styleClass="dashboard-container" prefWidth="1280" prefHeight="720">
    
    <!-- SIDEBAR ESQUERDA - MENU DE NAVEGAÇÃO -->
    <left>
        <VBox styleClass="sidebar" spacing="5">
            <!-- Cabeçalho da Sidebar -->
            <VBox styleClass="sidebar-header" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <FontIcon iconLiteral="mdi2b-book-education" iconSize="40" iconColor="white"/>
                </HBox>
                <Text text="SGBU" styleClass="sidebar-title" textAlignment="CENTER"/>
            </VBox>
            
            <Separator prefWidth="250" style="-fx-background-color: rgba(255,255,255,0.2);"/>
            
            <!-- Botões do Menu -->
            <VBox spacing="2" VBox.vgrow="ALWAYS">
                <Button fx:id="btnDashboard" text="Dashboard" styleClass="menu-button" 
                        onAction="#handleDashboard">
                    <graphic>
                        <FontIcon iconLiteral="mdi2v-view-dashboard" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnAcervo" text="Gestão de Acervo" styleClass="menu-button" 
                        onAction="#handleAcervo">
                    <graphic>
                        <FontIcon iconLiteral="mdi2b-bookshelf" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnUtentes" text="Gestão de Utentes" styleClass="menu-button" 
                        onAction="#handleUtentes">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-account-group" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnEmprestimos" text="Empréstimos" styleClass="menu-button" 
                        onAction="#handleEmprestimos">
                    <graphic>
                        <FontIcon iconLiteral="mdi2s-swap-horizontal" iconSize="20"/>
                    </graphic>
                </Button>
                
                <Button fx:id="btnRelatorios" text="Relatórios" styleClass="menu-button" 
                        onAction="#handleRelatorios">
                    <graphic>
                        <FontIcon iconLiteral="mdi2c-chart-bar" iconSize="20"/>
                    </graphic>
                </Button>
                
                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>
                
                <Separator prefWidth="250" style="-fx-background-color: rgba(255,255,255,0.2);"/>
                
                <Button text="Sair" styleClass="menu-button" onAction="#handleLogout">
                    <graphic>
                        <FontIcon iconLiteral="mdi2l-logout" iconSize="20"/>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>
    
    <!-- ÁREA CENTRAL - CONTEÚDO DINÂMICO -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Conteúdo será carregado dinamicamente aqui -->
            <!-- Conteúdo será carregado dinamicamente aqui -->

        </StackPane>
    </center>
</BorderPane>
